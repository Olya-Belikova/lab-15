        //Задание 1
        private static void PowerA3(double a, double b)
        {
            b = Math.Pow(a, 3);
            Console.WriteLine("{0} ", b);
        }

        //Задание 2
        private static void SingX(double x)
        {
             if(x < 0)
             {
                 x = -1;
                 Console.WriteLine(x);
             }
             else if (x == 0)
             {
                 x = 0;
                 Console.WriteLine(x);
             }
             else
             {
                 x = 1;
                 Console.WriteLine(x);
             }

        }

        //Задание 3
        private static double RingS(double r1, double r2)
        {
            return  Math.PI * (r1 * r1 - r2 * r2);
        }

        //Задание 4
        private static void Quarter(double x, double y)
        {
            if (x > 0 && y > 0)
            {
                Console.WriteLine("1-ая четверть");
                Console.WriteLine();
            }
            if (x < 0 && y > 0)
            {
                Console.WriteLine("2-ая четверть");
                Console.WriteLine();
            }
            if (x < 0 && y < 0)
            {
                Console.WriteLine("3-ая четверть");
                Console.WriteLine();
            }
            if (x > 0 && y < 0)
            {
                Console.WriteLine("4-ая четверть");
                Console.WriteLine();
            }
        }

        //Задание 5
        private static double Fact2(int n)
        {
            double result = 1;
            if (n % 2 == 0)
            {
                for (int i = 2; i <= n; i += 2)
                {
                    result *= (double)i;
                }
                Console.WriteLine(result);
            }

            else
            {
                for (int i = 1; i <= n; i += 2)
                {
                    result *= (double)i;
                }
                Console.WriteLine(result);
            }
            return result;
        }

